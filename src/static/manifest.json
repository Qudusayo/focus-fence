{
  "manifest_version": 3,
  "name": "Focus Fence",
  "description": "Focus Fence",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Fence",
    "default_icon": "icon.png"
  },
  "permissions": [
    "identity",
    "tabs",
    "storage",
    "nativeMessaging",
    "activeTab",
    "webNavigation",
    "webRequest",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
